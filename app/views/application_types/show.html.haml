- model_class = ApplicationType
.page-header
  %h1= t '.title', :default => model_class.model_name.human.titleize
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:name)
      \:
  %dd= @application_type.name
  %dt
    %strong
      = model_class.human_attribute_name(:remark)
      \:
  %dd= @application_type.remark
= link_to t('.back', :default => t("helpers.links.back")), |
  application_types_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")),                   |
  edit_application_type_path(@application_type), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
  application_type_path(@application_type),                                                                    |
  :method => 'delete',                                                                                         |
  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
  :class => 'btn btn-danger'
