<h1>Listing sims</h1>

<table>
  <thead>
    <tr>
      <th>Phone number</th>
      <th>Rental status</th>
      <th>Remark</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sims.each do |sim| %>
      <tr>
        <td><%= sim.phone_number %></td>
        <td><%= sim.rental_status_id %></td>
        <td><%= sim.remark %></td>
        <td><%= link_to 'Show', sim %></td>
        <td><%= link_to 'Edit', edit_sim_path(sim) %></td>
        <td><%= link_to 'Destroy', sim, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sim', new_sim_path %>
