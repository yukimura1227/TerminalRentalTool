= form_for @pc_terminal, html: { class: "form form-horizontal pc_terminal" } do |f|
  .control-group
    = f.label :name, class: 'control-label'
    .controls
      = f.text_field :name, class: 'form-control', required: true
    = error_span(@pc_terminal[:name])
  .control-group
    = f.label :manage_id, class: 'control-label'
    .controls
      = f.text_field :manage_id, class: 'form-control', required: true
    = error_span(@pc_terminal[:manage_id])
  .control-group
    = f.label :rental_status_id, class: 'control-label'
    .controls
      = f.collection_select :rental_status_id, RentalStatus.all, :id, :name, :include_blank => false, :selected => @pc_terminal.rental_status_id
    = error_span(@pc_terminal[:rental_status_id])
  .control-group
    = f.label :remark, class: 'control-label'
    .controls
      = f.text_field :remark, class: 'form-control', required: true
    = error_span(@pc_terminal[:remark])
  = f.submit nil,class: 'btn btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), pc_terminals_path, :class => 'btn btn-default'
